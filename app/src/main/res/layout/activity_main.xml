<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:background="#F6F0E4"
    tools:context="com.ayalus.mvphelloworld.MainActivityView"
    android:layout_height="1920px"
    android:layout_width="1080px">


    <EditText
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Your Toast Here..."
        android:id="@+id/edit_text_one"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="press to toast"
        android:id="@+id/button_one"
        android:layout_toRightOf="@+id/edit_text_one"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="press to change color"
        android:id="@+id/button_two"
        android:layout_below="@+id/edit_text_one"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press to do nothing"
        android:id="@+id/button_three"
        android:layout_below="@+id/button_two"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="press to get Weather"
        android:id="@+id/button_four"
        android:layout_below="@+id/button_three"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/weather_forecast_text_view_one"
        android:layout_width="520dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_four"
        android:textColor="#1D1D1D"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/weather_forecast_text_view_two"
        android:layout_width="520dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_forecast_text_view_one"
        android:textColor="#1D1D1D"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/weather_forecast_text_view_three"
        android:layout_width="520dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_forecast_text_view_two"
        android:textColor="#1D1D1D"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>
